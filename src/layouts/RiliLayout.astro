---
import type { HTMLTag } from "astro/types";
import BaseLayout from "./BaseLayout.astro";

const {
  title,
  description,
  head,
  className,
  isFixed = true,
  image,
}: {
  title?: string;
  description?: string;
  head?: HTMLTag;
  isFixed?: boolean;
  className?: string;
  image?: string;
} = Astro.props;

if (Astro.cookies.has("password")) {
  const cookie = Astro.cookies.get("password");

  if (cookie !== "hornitorrinco") Astro.redirect("/rili");
} else {
  Astro.redirect("/rili");
}
---

<BaseLayout
  title={title}
  description={description}
  head={head}
  className={className}
  isFixed={isFixed}
  image={image}
>
  <slot />
</BaseLayout>
