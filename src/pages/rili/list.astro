---
import { db, Rili } from "astro:db";
import RiliLayout from "@/layouts/RiliLayout.astro";
import RiliList from "@/components/Rili/RiliList";
import type { RiliArray } from "@/types";

const riliList: RiliArray = await db.select().from(Rili);
---

<RiliLayout title="Lista rili" description="Lista rili">
  <RiliList rilis={riliList} client:load />
</RiliLayout>
