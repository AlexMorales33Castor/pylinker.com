{
  "extends": "astro/tsconfigs/strict",
  "compilerOptions": {
    "strictNullChecks": true,
    "baseUrl": ".",
    "paths": {
      "@c/*": [
        "src/components/*"
      ],
      "@l/*": [
        "src/layouts/*"
      ],
      "@s/*": [
        "src/styles/*"
      ],
      // Only use this â†“
      "@/*": [
        "src/*"
      ]
    },
    "jsx": "react-jsx",
    "jsxImportSource": "react",
    "allowJs": true,
    "checkJs": true
  },
  "include": [
    "**/*.{astro,tsx,svelte,vue,ts}"
  ]
}