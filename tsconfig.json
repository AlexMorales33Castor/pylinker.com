{
  "extends": "astro/tsconfigs/strict",
  "compilerOptions": {
    "strictNullChecks": true,
    "baseUrl": "./",
    "paths": {
      // Old aliases
      "@c/*": ["src/components/*"],
      "@l/*": ["src/layouts/*"],
      "@s/*": ["src/styles/*"],

      // New alias
      "@/*": ["src/*"]
    }
  },
  "include": ["**/*.{astro,tsx,svelte,vue,ts}"]
}
