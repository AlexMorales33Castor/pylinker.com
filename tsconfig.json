{
  "extends": "astro/tsconfigs/strict",
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "strictNullChecks": true,
    "jsx": "react-jsx",
    "jsxImportSource": "@builder.io/qwik",
    "baseUrl": "./",
    "paths": {
      // Old aliases
      "@c/*": ["src/components/*"],
      "@l/*": ["src/layouts/*"],
      "@s/*": ["src/styles/*"],

      // New alias
      "@/*": ["src/*"]
    }
  }
}
